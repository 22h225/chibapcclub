---
import Empty from "../layouts/Empty.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
}
const { title = "県立千葉高校コンピュータ研究部" } = Astro.props;
---

<Empty {title}>
  <Header />
  <slot />
  <Footer />
</Empty>

<style lang="scss">
  main {
    position: relative;
    width: 100%;
    padding: 1rem 0 2rem 0;

    div {
      margin: 0 auto;
      width: 1200px;
      max-width: 75%;

      p {
        margin: 1rem;
      }
    }
  }
</style>
