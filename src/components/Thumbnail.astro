---
interface Props {
  text: string;
  src: string;
}
const { text, src } = Astro.props;
---

<div>
  <p>{text}</p>
  <img {src} alt="サムネイル" />
</div>

<style lang="scss">
  div {
    &,
    & img {
      width: 100%;
      height: 500px;
    }
  }

  div {
    position: relative;
    box-shadow: inset 0 0 0.25rem 0 black;
    text-align: center;
    overflow: hidden;

    p {
      margin: 0;
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      font-size: 4rem;
      color: #fff;
      text-shadow: 0.1rem 0.1rem 0 #000000;
      font-family: cursive;
      text-transform: uppercase;
      z-index: 1;
    }

    img {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      object-fit: cover;
    }
  }
</style>
